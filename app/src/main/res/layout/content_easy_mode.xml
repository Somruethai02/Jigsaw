<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_easy_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rtc.somruethaianusa.jigsaw.EasyActivity"
    tools:showIn="@layout/activity_easy_mode"
    android:background="@drawable/www">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:layout_gravity="center_vertical|center_horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/you"
                android:id="@+id/BtBigJigsaw1_id"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="BigJigsawClick"
                android:src="@drawable/you" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/you"
                android:id="@+id/BtBigJigsaw2_id"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="BigJigsawClick" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/you"
                android:id="@+id/BtBigJigsaw3_id"
                android:background="@null"
                android:layout_weight="1"
                android:onClick="BigJigsawClick" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/you"
                android:id="@+id/BtBigJigsaw4_id"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="BigJigsawClick" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="100px"
                android:layout_height="100px"
                app:srcCompat="@drawable/image_001"
                android:id="@+id/BtSmallJigsaw1_id"
                android:background="@null"
                android:elevation="0dp"
                android:layout_weight="0"
                android:scaleType="fitXY"
                android:onClick="SmallJigsawClicked" />

            <Space
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <ImageButton
                android:layout_width="100px"
                android:layout_height="100px"
                app:srcCompat="@drawable/image_002"
                android:id="@+id/BtSmallJigsaw2_id"
                android:layout_weight="0"
                android:background="@null"
                android:onClick="SmallJigsawClicked (EasyActivity)"
                android:scaleType="fitXY" />

            <Space
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <ImageButton
                android:layout_width="100px"
                android:layout_height="100px"
                app:srcCompat="@drawable/image_003"
                android:id="@+id/BtSmallJigsaw3_id"
                android:layout_weight="0"
                android:onClick="SmallJigsawClicked"
                android:scaleType="fitXY"
                android:background="@null" />

            <Space
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <ImageButton
                android:layout_width="100px"
                android:layout_height="100px"
                app:srcCompat="@drawable/image_004"
                android:id="@+id/BtSmallJigsaw4_id"
                android:layout_weight="0"
                android:onClick="SmallJigsawClicked (EasyActivity)" />

            <Space
                android:layout_height="20px"
                android:layout_weight="0"
                android:layout_width="400px" />

            <ImageButton
                android:layout_width="@dimen/h12"
                android:layout_height="@dimen/h12"
                app:srcCompat="@drawable/check"
                android:id="@+id/imageButton4"
                android:layout_weight="0"
                android:background="@null"
                android:onClick="checkClicked"
                android:scaleType="fitCenter" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
